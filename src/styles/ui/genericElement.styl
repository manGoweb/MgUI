@require 'card'

.genericElement
	$card()
	$border = solid 1px $mgBorderLightGrey
	width 15em
	max-width 80vw
	margin-bottom .3em
	border $border

	&:not(:last-child)
		margin-right .1em

	&-image
		height 0
		padding-top 52.35602%
		background-position center center
		background-size cover

	&-text
		padding .5em .75em
		font-size .95em
		line-height 1.4

	&-title
		color $mgTextBlack
		font-weight 600

	&-subtitle
		color $mgTextDarkGrey

	&-itemUrl
		color $mgTextLightGrey

	&-buttons .button
		border-top $border
		text-align center

	&:not(:first-child)
		$join-tl()
		$join-bl()

	&:not(:last-child)
		$join-tr()
		$join-br()
