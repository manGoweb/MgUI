.screen
	display inline-block
	width 375px
	max-width 100%
	height 520px
	background $iosBgWhite
	overflow-x hidden
	overflow-y auto
	position relative

	&.with-shadow
		box-shadow 0 1px 2px rgba(#000, .2),  0 2px 10px rgba(#000, .2)

.screenConversation
	padding .5em
	max-height 100%
	overflow-y auto

.screenOverlay
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	background rgba(#000, .2)
