.mgui-persistentMenu
	background $iosBgWhite

	&-head
		background $iosNavGrey
		border-bottom solid 1px rgba(#000, .15)
		text-align center
		position relative

	&-title
	&-closeBtn
		padding .5em

	&-title
		font-weight 600

	&-closeBtn
		position absolute
		top 0
		right 0
		bottom 0
		color $iosBlue

	&-elements
		padding .2em 0

	&-element .mgui-button
		display block
		text-align center
		padding .4em

.mgui-screen .mgui-persistentMenu
	position absolute
	bottom 0
	left 0
	right 0
