.persistentMenu
	background $iosBgWhite

	&-head
		background $iosNavGrey
		border-bottom solid 1px rgba(#000, .15)
		text-align center
		position relative

	&-title
	&-closeBtn
		padding .5em

	&-title
		font-weight 500

	&-closeBtn
		position absolute
		top 0
		right 0
		bottom 0
		color $iosBlue

	&-elements
		padding .25em 0

	&-element .button
		display block
		text-align center

.screen .persistentMenu
	position absolute
	bottom 0
	left 0
	right 0

.screen .persistentMenu-overlay
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	background rgba(#000, .2)
